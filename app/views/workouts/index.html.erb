<p id="notice"><%= notice %></p>
<%= link_to 'Next Workout', new_workout_path %><br>
<h1>Workout History</h1>
<% @workouts.reverse.each do |workout| %>
  <h3><%= workout.created_at.strftime("%d %b. %Y")%></h3>
  <h4><%= workout.name %></h4>

  <table>
    <tr>
      <th>Exercise</th>
      <th>Sets</th>
      <th>Reps</th>
      <th>Weight</th>
      <th>Rest</th>
    </tr>
    <% workout.exercises.each do |exercise| %>
      <tr>
        <td><%= exercise.name %></td>
        <td><%= exercise.sets %></td>
        <td><%= exercise.reps %></td>
        <td><%= exercise.weight %></td>
        <td><%= exercise.rest %></td>
      </tr>
    <% end %>
  </table>
  <hr>
<% end %>
