<p id="notice"><%= notice %></p>
<h1>List of Workout Templates</h1>

<% unless @collection.blank? %>
  <table class='table'>
      <% @collection.each do |workout_template| %>
        <tr>
          <td><%= workout_template.name %></td>
          <td><%= link_to 'Show', workout_template %></td>
          <% if request.fullpath == my_workout_templates_path %>
            <td><%= link_to 'Edit', edit_workout_template_path(workout_template) %></td>
            <td><%= link_to 'Destroy', workout_template, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          <% end %>
        </tr>
      <% end %>
    </table>
  <% else %>
    <p>There are no templates to display.</p>
  <% end %>
<br>

<%= link_to @text, @link %><br>
<%= render 'layouts/creation_nav' %>
