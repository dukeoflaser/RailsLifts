<p id="notice"><%= notice %></p>

<h1>Listing exercise Templates</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @exercise_templates.each do |exercise_template| %>
      <tr>
        <td><%= exercise_template.name %></td>
        <td><%= link_to 'Show', exercise_template %></td>
        <td><%= link_to 'Edit', edit_exercise_template_path(exercise_template) %></td>
        <td><%= link_to 'Destroy', exercise_template, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to @current_exercise_templates_text, @current_exercise_templates_link %><br>
<%= link_to 'New exercise template', new_exercise_template_path %><br>
