<%= form_for(@exercise_template) do |f| %>
  <% if @exercise_template.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@exercise_template.errors.count, "error") %> prohibited this exercise_template from being saved:</h2>

      <ul>
      <% @exercise_template.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="actions">
    <%= f.label :name, 'Exercise Name' %><br>
    <%= f.text_field :name, :placeholder => "Bench Press" %><br>
    <%= f.label :reps, 'Sets/Reps' %><br>
    <%= f.text_field :reps, :placeholder => "8 8 8" %><br>
    <%= f.label :weight, 'Starting Weight (lbs)' %><br>
    <%= f.number_field :weight, :placeholder => "0" %><br>
    <%= f.label :rest, 'Rest Period (seconds)' %><br>
    <%= f.number_field :rest, :placeholder => "180" %><br>
    <%= f.submit 'Create Exercise' %>
  </div>
<% end %>
